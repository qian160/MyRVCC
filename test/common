#include <stdarg.h>
#include <stdio.h>
#include <stdlib.h>

void assert(int expected, int actual, char *code) {
  if (expected == actual) {
    printf("%s => %d\n", code, actual);
  } else {
    printf("%s => %d expected but got %d\n", code, expected, actual);
    exit(1);
  }
}

// [75] 支持文件域内函数
static int static_fn() { return 5; }

// [116] 支持extern
int ext1 = 5;
int *ext2 = &ext1;

// [117] 处理块中的extern声明
int ext3 = 7;
int ext_fn1(int x) { return x; }
int ext_fn2(int x) { return x; }

// [126] 支持函数返回短整数
_Bool false_fn() { return 0; }
_Bool true_fn() { return (_Bool)114514; }
char char_fn() { return (char)((2<<8)+3); }
short short_fn() { return (short)((2<<16)+5); }

// [127] 允许调用可变参数函数
int add_all(int n, ...) {
  va_list ap;
  va_start(ap, n);

  int sum = 0;
  for (int i = 0; i < n; i++)
    sum += va_arg(ap, int);
  return sum;
}
